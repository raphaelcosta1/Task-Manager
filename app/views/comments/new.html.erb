<div class="form-group align-item-center container border">
  <div class="text-center">
    <h1>New Comment</h1>
  </div>

  <%= form_for ([@task, @comment]) do |f| %>
  <div class="row">
    <div class="col-12 text-center">
      <%= f.label :body, "Comment" %> <%= f.text_field :body, class:
      "form-control", placeholder: 'Type your Comment' %>
    </div>
  </div>
  <br />

  <div class="row">
    <div class="col-12"><%= f.submit class: "btn btn-primary mt-2" %></div>
  </div>

  <% end %>
</div>
